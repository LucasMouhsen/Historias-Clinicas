
<%- include('./partials/head') %> 

<body class="listado">
  <%- include('./partials/headerConBuscador') %> 
  <section class="m-5">
        <table class="table table-dark table-hover pt-5">
          <thead>
            <tr class="form-header">
              <th scope="col">#</th>
              <th scope="col">HISTORIA CLINICA</th>
              <th scope="col">ULTIMO REGISTRO</th>
              <th scope="col">DNI</th>
              <th scope="col">NOMBRE</th>
              <th scope="col">APELLIDO</th>
              <th scope="col">CAJA</th>
            </tr>
          </thead>
          <tbody id="fila">

            <% historias.forEach(historia=> { %>
              <tr id="tr">
                <th scope="row"><%= historia.id %></th>
                <td id="hc"><%= historia.hc %></td>
                <td id="ultimoRegistro"><%= obtenerFecha(historia.ultimoRegistro) %></td>
                <td id="dni"><%= obtenerNumeros(historia.hc) %></td>
                <td id="persona"><%= capitalizarPrimeraLetra(historia.persona.nombre) %></td>
                <td id="apellido"><%= capitalizarPrimeraLetra(historia.persona.apellido) %></td>
                <td id="codigoBarras"><%= historia.caja.codigoBarras %></td>
                <% }) %>
              </tr>
          </tbody>
        </table>
  </section>

  <!-- <script src="/js/Validations.js"></script> -->
  <script src="/js/Buscador.js"></script>
  <script src="/js/paraDestruccion.js"></script>
</body>

</html>